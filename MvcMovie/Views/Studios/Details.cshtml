@model MvcMovie.Models.Studio

@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-10">
        <h2>STUDIO DETAILS</h2>
    </div>
    <div class="col-auto">
        <p>
            <a asp-action="Index" class="btn btn-primary">BACK TO LIST</a>
        </p>
    </div>
</div>
<hr>

<div>
    <dl class="row">
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Country):
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Site):
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Site)
        </dd>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Movies):
        </dt>
        <dd class="col-sm-11">
            @if (Model.Movies != null)
            {
                foreach (var artist in Model.Movies)
                {
                    <div>
                        @Html.DisplayFor(modelItem => artist.Title)
                    </div>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StudioId" class="btn btn-warning">EDIT</a>
    <a asp-action="Delete" asp-route-id="@Model?.StudioId" class="btn btn-danger">DELETE</a>
</div>