@model MvcMovie.Models.Artist

@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="col-10">
        <h2>ARTIST DELETE</h2>
    </div>
    <div class="col-auto">
        <p>
            <a asp-action="Index" class="btn btn-primary">BACK TO LIST</a>
        </p>
    </div>
</div>
<hr>

<div>
    <dl class="row">
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Bio):
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Bio)
        </dd>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Site):
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Site)
        </dd>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Movies):
        </dt>
        <dd class="col-sm-11">
            @if (Model.Movies != null)
            {
                foreach (var artist in Model.Movies)
                {
                    <div>
                        @Html.DisplayFor(modelItem => artist.Title)
                    </div>
                }
            }
        </dd>
    </dl>

    <h3>Are you sure you want to delete @Model.Name?</h3>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ArtistId"/>
        <input type="submit" value="YES" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-primary">CANCEL</a>
    </form>
</div>