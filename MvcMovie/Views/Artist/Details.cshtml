@model MvcMovie.Models.Artist

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-10">
        <h2>ARTIST DETAILS</h2>
    </div>
    <div class="col-auto">
        <p>
            <a asp-action="Index" class="btn btn-primary">BACK TO LIST</a>
        </p>
    </div>
</div>
<hr>

<div>
    <dl class="row">
        <dt class = "col-sm-1">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-1">
            @Html.DisplayNameFor(model => model.Bio):
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.Bio)
        </dd>
        <dt class = "col-sm-1">
            @Html.DisplayNameFor(model => model.Site):
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.Site)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ArtistId" class="btn btn-warning text-white">EDIT</a>
    <a asp-action="Delete" asp-route-id="@Model.ArtistId" class="btn btn-danger text-white">DELETE</a>
</div>
