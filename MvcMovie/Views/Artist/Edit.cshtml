@model MvcMovie.Models.Artist

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-10">
        <h2>ARTIST EDIT</h2>
    </div>
    <div class="col-auto">
        <p>
            <a asp-action="Index" class="btn btn-primary">BACK TO LIST</a>
        </p>
    </div>
</div>
<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtistId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <label asp-for="Site" class="control-label"></label>
                <input asp-for="Site" class="form-control" />
                <span asp-validation-for="Site" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input type="submit" value="SAVE" class="btn btn-success col-3" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
