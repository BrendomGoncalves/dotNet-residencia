@{
    ViewData["Title"] = "Login";
}
@if (User.Identity is { IsAuthenticated: true })
{
    <h2 class="form-title">Você está logado(a) como @User.Identity.Name.</h2><br>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Página Principal</a>
}
else
{
    <form method="post">
        <h2 class="form-title">Login</h2>
        <div asp-validation-summary="All"></div>
        <div class="form-group col-sm-7">
            <label>Email:</label>
            <input name="Email" class="form-control" type="email"/>
            <span class="text-danger"></span>
        </div>
        <br>
        <div class="form-group col-sm-7">
            <label>Password:</label>
            <input name="Password" class="form-control" type="password"/>
            <span class="text-danger"></span>
        </div>
        <br>
        <button type="submit" class="btn btn-primary form-button">Login</button>
    </form>
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

